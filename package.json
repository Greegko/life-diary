{
  "scripts": {
    "start": "concurrently -n emulator,app \"npm run emulation:start\" \"npm run app:start\"",
    "emulation:start": "GOOGLE_APPLICATION_CREDENTIALS=secret_cloud_key.json firebase emulators:start",
    "deploy": "npm run app:build && firebase deploy",
    "app:start": "npm run start --prefix packages/app",
    "app:build": "npm run build --prefix packages/app"
  },
  "devDependencies": {
    "concurrently": "5.3.0",
    "firebase-tools": "9.1.0"
  }
}
